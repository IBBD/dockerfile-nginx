#!/bin/bash

name=nginx
docker stop ibbd-$name 
docker rm ibbd-$name 

# 注意：这里需要 volumes-from ,否则出错, 因为nginx需要用到相应的路径
# 运行时指定配置文件
docker run --name=ibbd-$name -d \
    -p 80:80 \
    --link ibbd-php-fpm:php-fpm \
    -v /var/www:/var/www \
    -v /var/log/nginx:/var/log/nginx \
    -v /etc/nginx/sites-enabled:/etc/nginx/sites-enabled:ro \
    -v /path/to/conf/nginx.conf:/etc/nginx/nginx.conf:ro \
    --volumes-from ibbd-php-fpm \
    ibbd/$name 

docker ps

